      <% if obj.errors.any? %>
        <div id="error-explanation">
          <h3>
          <% if obj.errors.count == 1 %>
            1 error prohibited this obj from being saved:
          <% else %>
            <%= obj.errors.count %> errors prohibited this obj from being saved:
          <% end %>
          </h3>
          <ul>
            <% obj.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>